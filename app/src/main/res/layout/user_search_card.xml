<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search_profile_name"
            app:layout_constraintStart_toStartOf="parent"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_account_circle_80" />

        <TextView
            android:id="@+id/search_profile_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="11dp"
            android:text="Users Name Will Go Here"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/search_profile_dob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_profile_image"
            app:layout_constraintTop_toTopOf="@id/search_profile_image" />

        <TextView
            android:id="@+id/search_profile_dob"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="11dp"
            android:text="Users DOB Will Go Here"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/search_profile_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/search_profile_name" />

        <TextView
            android:id="@+id/search_profile_number"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="10dp"
            android:text="Users Phone Number will go here"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/search_profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/search_profile_dob" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>